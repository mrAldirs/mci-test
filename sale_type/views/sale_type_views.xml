<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="sale_type_form_view" model="ir.ui.view">
            <field name="name">sale.type.form</field>
            <field name="model">sale.type</field>
            <field name="arch" type="xml">
                <form string="Sale Type">
                    <sheet>
                        <group>
                            <group>
                                <field name="active" attrs="{'invisible': True}"/>
                                <field name="name"/>
                                <field name="description"/>
                            </group>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="sale_type_tree_view" model="ir.ui.view">
            <field name="name">sale.type.tree</field>
            <field name="model">sale.type</field>
            <field name="arch" type="xml">
                <tree string="Sale Type">
                    <field name="sequence" widget="handle"/>
                    <field name="name"/>
                    <field name="description"/>
                </tree>
            </field>
        </record>

        <record id="sale_type_search_view" model="ir.ui.view">
            <field name="name">sale.type.search</field>
            <field name="model">sale.type</field>
            <field name="arch" type="xml">
                <search string="Sale Type">
                    <field name="name" string="Name"/>
                    <field name="description" string="Description"/>

                    <separator/>
                    <filter string="Active" name="active" domain="[('active', '=', True)]" attrs="{'invisible': True}"/>
                    <filter string="Archived" name="inactive" domain="[('active', '=', False)]"/>
                </search>
            </field>
        </record>

        <record id="sale_type_action" model="ir.actions.act_window">
            <field name="name">Sale Type</field>
            <field name="res_model">sale.type</field>
            <field name="view_mode">tree,form</field>
            <field name="context">{'default_active': 1}</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_create">
                    Click to create new Sale Type.
                </p>
                <p>
                    There is no examples click here to add new Sale Type.
                </p>
            </field>
        </record>

        <menuitem name="Sale Type" id="sale_type_menu" parent="sale.menu_sale_config" action="sale_type_action" sequence="1"/>

    </data>
</odoo>